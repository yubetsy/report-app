{
	"easycom": {
		"^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		}
	    ,{
            "path" : "pages/week-report/week-report",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "周报",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/user/user",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "个人中心",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/week-report-form/week-report-form",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "填写周报",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/week-report-detail/week-report-detail",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "我的历史周报",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/week-report-list/week-report-list",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "周报列表",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {},
	"tabBar": {
		"color": "#333",
		"selectedColor": "#00ff00",
		"list": [{
				"text": "首页",
				"pagePath": "pages/index/index",
				"iconPath": "/static/image/index.png",
				"selectedIconPath": "static/image/index-select.png"
			},
			{
				"text": "周报",
				"pagePath": "pages/week-report/week-report",
				"iconPath": "static/image/report.png",
				"selectedIconPath": "static/image/report-select.png"
			},
			{
				"text": "我的",
				"pagePath": "pages/user/user",
				"iconPath": "/static/image/user.png",
				"selectedIconPath": "static/image/user-select.png"
			}
		]
	},
	"condition" : { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式(list 的索引项)
		"list": [
			{
				"name": "", //模式名称
				"path": "", //启动页面，必选
				"query": "" //启动参数，在页面的onLoad函数里面得到
			}
		]
	}
}
